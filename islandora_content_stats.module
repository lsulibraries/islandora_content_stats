function islandora_content_stats_block_view($delta = ''){
$blocks = array();
  switch ($delta) {
    case 'content_stats':
      $blocks['subject'] = t('Content Stats Block');
      $blocks['content'] = drupal_get_form('islandora_content_stats_table_form');
      break;
  }
  return $blocks;
}
